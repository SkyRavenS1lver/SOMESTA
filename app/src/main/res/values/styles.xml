<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>

    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ToggleStyle">
        <item name="android:background">@drawable/groupingbg</item>
        <item name="android:textColor">@drawable/groupingtxt</item>
    </style>
    <style name="filterBTN">
        <item name="android:background">@drawable/filter_btn</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="Theme.App" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorSecondary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>
    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/pert_green</item>
        <item name="android:textColorSecondary">@color/pert_gray</item>
    </style>
    <style name="loginBox" parent="Base.Theme.AppCompat">
        <item name="android:textColorHint">@color/pert_gray</item>
        <item name="android:background">@drawable/login_bg</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="loginButton" parent="Base.Theme.AppCompat">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/login_submit_button</item>
        <item name="backgroundTint">@color/pert_blue_light</item>
    </style>
    <style name="BoxContainer">
        <item name="android:background">@drawable/boxcontainer</item>
    </style>
    <style name="InputBoxNUM">
        <item name="android:textColor">@color/pert_dark</item>
        <item name="android:textSize">@dimen/description</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:background">@drawable/inputboxcontainer</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textColorHint">#868686</item>
    </style>

</resources>
