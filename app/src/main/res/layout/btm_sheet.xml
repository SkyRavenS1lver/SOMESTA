<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/sheets"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:background="@drawable/btm_sheet_bg">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_remove_24"
            android:layout_gravity="center"
            android:layout_weight="10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/btmSheetX"
            android:layout_marginRight="@dimen/btmSheetX"
            android:layout_weight="1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Filters"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="@dimen/txtSizeBtmSheet"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/filterReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textColor="@android:color/holo_red_dark"
                    android:textStyle="bold"
                    android:textSize="@dimen/txtSizeBtmSheet"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarThumbVertical="@null"
                android:scrollbarThumbHorizontal="@null">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Group"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/allGroup"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:gravity="end"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none"
                        android:id="@+id/rvGroup"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/allStatus"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:gravity="end"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvStatus"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lokasi"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/allLokasi"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:gravity="end"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvLokasi"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kebutuhan per bulan"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/allKebutuhan"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:gravity="end"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvKebutuhan"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Jenis Industri"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:layout_weight="1"
                            />
                        <TextView
                            android:id="@+id/allJenis"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lihat Semua"
                            android:textColor="@android:color/holo_red_dark"
                            android:textSize="@dimen/txtSizeBtmSheet"
                            android:layout_marginTop="@dimen/elemenY"
                            android:gravity="end"
                            />
                    </LinearLayout>
                    <androidx.recyclerview.widget.RecyclerView
                        android:scrollbars="none"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/rvJenis" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonFiltering"
                style="@style/filterBTN"
                android:layout_weight="5"
                android:text="Terapkan Filter"
                android:layout_marginHorizontal="50dp"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>
    </FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>